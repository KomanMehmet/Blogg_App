@model List<Post>

<div class="row">
    <div class="col-12">
        <h2>Konu Listesi</h2>    
        <a href="/posts/create" class="btn btn-primary">Yeni Konu</a>

        <table class="table tabled-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 200px;">Resim</th>
                    <th>Başlık</th>
                    <th>Aktiflik</th>
                    <th style="width: 125px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td><img src="/image/@item.Image" class="img-fluid" alt=""></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/posts/edit/@item.PostId" class="btn btn-sm btn-primary">Düzenle</a>
                            <a href="#" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

