@model PostsViewModel

<div class="row">
    <div class="col-lg-8">
        <div class="div-body p-4">
            <h1 class="post-header h4 mb-4">Pop√ºler Yorumlar</h1>
            @foreach(var post in Model.Posts)
            {
                <div class="bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/image/@post.Image" class="img-fluit rounded" alt="" width="200" height="250">
                        </div>
                        <div class="col-8">
                            <h5><a href="/posts/details/@post.Url" class="title btn-link fw-bold">@post.Title</a></h5>
                            <p class="Description">@post.Description</p>
                        </div>
                    </div>
                </div>
                <hr class="line my-3">
            }

            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>


